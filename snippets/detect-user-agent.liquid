<script>
  const ua = navigator.userAgent.toLowerCase(); 

  if (ua.indexOf('safari') != -1) { 
    if (ua.indexOf('chrome') > -1) {
      const imgElement = document.querySelectorAll('.detect-safari > img[data-type="webp"]');
      imgElement.forEach(el => {
        el.style.display = 'block'
      })
    } else {
      const imgElement = document.querySelectorAll('.detect-safari > img[data-type="png/jpeg"]');
      imgElement.forEach(el => {
        el.style.display = 'block'
      })
    }
  }
</script>