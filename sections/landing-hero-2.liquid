{% include 'landing-hero' %}

{% schema %}
  {
    "name": "Hero",
    "class": "no-spaces old-style old-content",
    "settings": [
      {
         "type": "color",
         "id": "background_color",
         "label": "Background color",
         "default": "#ffffff"
      },
      {
         "type": "color",
         "id": "color",
         "label": "Color",
         "default": "#000"
      },
      {
         "type": "color",
         "id": "background_btn_color",
         "label": "Background button color",
         "default": "#a2fdff"
      },
      {
        "type": "html",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Image with text overlay"
      },
      {
        "type": "select",
        "id": "hero_size",
        "label": "Section height",
        "default": "medium",
        "options": [
          {
            "label": "Extra Small",
            "value": "x-small"
          },
          {
            "label": "Small",
            "value": "small"
          },
          {
            "label": "Medium",
            "value": "medium"
          },
          {
            "label": "Large",
            "value": "large"
          },
          {
            "label": "Extra Large",
            "value": "x-large"
          }
        ]
      },
      {
        "type": "select",
        "id": "text_size",
        "label": "Text size",
        "default": "medium",
        "options": [
          {
            "label": "Medium",
            "value": "medium"
          },
          {
            "label": "Large",
            "value": "large"
          }
        ]
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ]
  }
{% endschema %}
