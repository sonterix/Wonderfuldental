{% include 'landing-logos' %}

{% schema %}
  {
    "name": "Logos",
    "class": "no-spaces",
    "max_blocks": 4,
    "settings": [
      {
         "type": "color",
         "id": "background_color",
         "label": "Background color",
         "default": "#ffffff"
      },
      {
         "type": "color",
         "id": "color",
         "label": "Color",
         "default": "#000"
      },
      {
        "type": "text",
        "id": "bottom_text",
        "label": "Bottom text"
      }
    ],
    "blocks":[
      {
        "name": "Heading With Image",
        "type": "img_text",
        "settings": [
		  {
	         "type": "text",
            "id": "image_svg",
            "label": "Image ( SVG )"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "range",
            "id": "max_height",
            "min": 50,
            "max": 600,
            "step": 10,
            "unit": "px",
            "label": "Max image height",
            "default": 100
          },
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          },
		  {
            "type": "text",
            "id": "sub_text",
            "label": "Text"
          }
		]
      }
    ]
  }
{% endschema %}